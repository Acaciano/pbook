@using PBook.Domain.Entidades
@model Autor
@{
    ViewData["Title"] = "Confirmação apagar autor";
}

<div class="text-center">
    <h3>Realmente deseja apagar o autor (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Autor" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Autor" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
