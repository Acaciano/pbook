@using PBook.Domain.Entidades
@model Livro
@{
    ViewData["Title"] = "Confirmação apagar livro";
}

<div class="text-center">
    <h3>Realmente deseja apagar o livro (@Model.Titulo)?</h3>
</div>

<a class="btn btn-primary btn-block" asp-action="Index" asp-controller="Livro" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Livro" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
